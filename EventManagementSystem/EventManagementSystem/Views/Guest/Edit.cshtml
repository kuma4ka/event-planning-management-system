@model EventManagementSystem.Models.GuestModel

@{
ViewData["Title"] = "Edit Guest";
}

<link rel="stylesheet" href="~/css/guest/edit-guest.css" asp-append-version="true">

<div class="container-edit">
    <h2>Edit Guest</h2>

    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="GuestId" />
            <input type="hidden" asp-for="OrganizerId" />
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <nav class="links">
        <a asp-action="List" asp-route-eventId="@Model.EventId" class="link">Back to List</a>
    </nav>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

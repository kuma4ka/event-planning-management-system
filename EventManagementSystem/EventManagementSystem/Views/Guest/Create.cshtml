@model EventManagementSystem.Models.GuestModel

<link rel="stylesheet" href="~/css/guest/add.css" asp-append-version="true">

<h1 class="page-title">Add Guest</h1>

<div class="edit-form-container">
    <form asp-action="Create">
        <input type="hidden" asp-for="EventId" />

        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-input" />
            <span asp-validation-for="FirstName" class="form-validation"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-input" />
            <span asp-validation-for="LastName" class="form-validation"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="form-validation"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone</label>
            <input asp-for="PhoneNumber" class="form-input" />
            <span asp-validation-for="PhoneNumber" class="form-validation"></span>
        </div>

        <div class="navs">
            <button type="submit" class="btn-save">Add Guest</button>
            <a asp-controller="Event" asp-action="List" class="return-link">Return</a>
        </div>
    </form>

</div>

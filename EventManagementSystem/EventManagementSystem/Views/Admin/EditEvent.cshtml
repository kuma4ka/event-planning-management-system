@model EventManagementSystem.Models.EventModel

@{
    ViewData["Title"] = "Edit Event";
}

<link rel="stylesheet" href="~/css/admin/edit-event.css" asp-append-version="true">

<div class="container-edit">
    <h2>Edit Event</h2>

    <form asp-action="EditEvent" method="post">
        <div class="form-group">
            <label asp-for="EventName" class="control-label"></label>
            <input asp-for="EventName" class="form-control"/>
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EventDate" class="control-label"></label>
            <input asp-for="EventDate" class="form-control"/>
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control"/>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EventDescription" class="control-label"></label>
            <textarea asp-for="EventDescription" class="form-control"></textarea>
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrganizerId" class="control-label"></label>
            <input asp-for="OrganizerId" class="form-control"/>
            <span asp-validation-for="OrganizerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RegisteredAt" class="control-label"></label>
            <input asp-for="RegisteredAt" class="form-control" readonly/>
        </div>
        <input type="hidden" asp-for="EventId"/>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
    </form>
    
    <div>
        <a asp-action="AdminPanel">Back to Admin Panel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
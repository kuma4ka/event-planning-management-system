@model EventManagementSystem.Models.EventModel

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>@Model.EventName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.EventDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.EventDescription
        </dd>
    </dl>
    
    <form asp-action="DeleteEvent" method="post">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AdminPanel" class="btn btn-secondary">Cancel</a>
    </form>
</div>
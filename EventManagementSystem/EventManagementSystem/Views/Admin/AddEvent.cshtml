@model EventManagementSystem.Models.EventModel

@{
ViewData["Title"] = "Add Event";
}

<link rel="stylesheet" href="~/css/admin/add-event.css" asp-append-version="true"/>

<div class="container-add-event">
    <h2>Add Event</h2>

    <form asp-action="AddEvent" method="post">
        <div class="form-group">
            <label asp-for="OrganizerId" class="control-label"></label>
            <input asp-for="OrganizerId" class="form-control" />
            <span asp-validation-for="OrganizerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EventName" class="control-label"></label>
            <input asp-for="EventName" class="form-control" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EventDate" class="control-label"></label>
            <input asp-for="EventDate" type="date" class="form-control" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label">Event Type: </label>
            <select asp-for="Type" class="form-control">
                <option disabled selected>Select</option>
                @foreach (var type in Enum.GetValues(typeof(EventManagementSystem.Utils.Enums.EventType)))
                {
                <option value="@type">@type</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="EventDescription" class="control-label"></label>
            <textarea asp-for="EventDescription" class="form-control"></textarea>
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RegisteredAt" class="control-label"></label>
            <input asp-for="RegisteredAt" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="RegisteredAt" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="AdminPanel" class="return-link">Back to Admin Panel</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

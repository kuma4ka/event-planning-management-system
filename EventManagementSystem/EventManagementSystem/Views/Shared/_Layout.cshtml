<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>EPMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    @* <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true"/> *@
</head>
<body class="d-flex flex-column min-vh-100">
<header class="header">
    <nav class="header-color navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/lib/images/logo.png" width="150px" alt="EPMS">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @{
                        if (User.Identity.IsAuthenticated)
                        {
                        <a class="nav-link" asp-controller="Event" asp-action="List">Dashboard</a>
                        }
                        else
                        {
                        <a class="nav-link" href="@Url.Action("Login", "Account")">My Dashboard</a>
                        }
                        }
                    </li>
                    <li class="nav-item">
                        @{
                        if (User.Identity.IsAuthenticated)
                        {
                        <a class="nav-link action" asp-controller="Event" asp-action="Create">Create event</a>
                        }
                        else
                        {
                        <a class="nav-link action" href="@Url.Action("Login", "Account")">Create event</a>
                        }
                        }
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-auto text-muted">
    <div class="container text-center">
        &copy; 2024 - Event Planning Management System
    </div>
</footer>

<script src="~/js/index.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

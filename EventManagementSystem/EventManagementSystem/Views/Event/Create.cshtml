@model EventManagementSystem.Models.EventModel

<link rel="stylesheet" href="~/css/event/create.css" asp-append-version="true">

<h1 class="page-title">Create Event</h1>

<form asp-controller="Event" asp-action="Create" method="post" class="event-form">
    <input type="hidden" name="OrganizerId" value="@ViewData["OrganizerId"]" />

    <div class="form-group">
        <label asp-for="EventName" class="form-label">Event Name:</label>
        <input asp-for="EventName" class="form-input" />
        <span asp-validation-for="EventName" class="form-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="form-label">Date:</label>
        <input asp-for="EventDate" type="date" id="EventDate" class="form-input" />
        <span asp-validation-for="EventDate" class="form-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="form-label">Type:</label>
        <select id="Type" name="Type" class="form-select">
            <option disabled selected>Select</option>
            @foreach (var type in Enum.GetValues(typeof(EventManagementSystem.Utils.Enums.EventType)))
            {
            <option value="@type">@type</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EventDescription" class="form-label">Description:</label>
        <textarea asp-for="EventDescription" class="form-textarea"></textarea>
        <span asp-validation-for="EventDescription" class="form-validation"></span>
    </div>
    <div class="navs">
        <button type="submit" class="submit-button">Create Event</button>
        <a asp-controller="Event" asp-action="List" class="return-link">Return</a>
    </div>
</form>


<script>
    document.getElementById("EventDate").min = new Date().toISOString().split("T")[0];
</script>
